while (i < 20)
{
   System.out.println(i);
   i++;
}
_______________________________________
int i = 1;
while (i <= 20)
{
   if ( (i % 7) == 0) continue;
   System.out.println(i);
   i++;
}
_______________________________________
Scanner console = new Scanner(System.in);
int count = 0;
for (int i = 0; i < 10; i++)
{
   if (console.hasNextInt())
      count++;
   console.nextLine();
}
System.out.println(count);
___________________________________________
int f = 1;
for (int i = 1; i <= 10; i++)
   f = f * i;
System.out.println(f);
_____________________________________
			Рисуем звездочками
for (int i = 0; i < 10; i++)
{
   int starCount = 10 - i;
   for (int j = 0; j < starCount; j++)
      System.out.print("*");
   System.out.println();
}
_________________________________________
			while - do-while
String s;
while (true)
{
   s = console.nextLine();
   if (s.equals("exit"))
      break;
}
_________________________________________
String s;
do
{
   s = console.nextLine();
}
while (!s.equals("exit"));
